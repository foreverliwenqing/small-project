/* pages/history/history.wxss */
.container {
  padding: 0;
}

.table {
  border: 0px solid darkgray;
  width: 100%;
  overflow: scroll;
  z-index: 1;
  height: calc(100vh - 130px);
}

.searchBox {
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 10px;
  height: 50px;
  z-index: 100;
  background: white;
  position: fixed;
}
.xuhao, .tdLast {
  width: 25% !important;
}

.weui-cell {
  padding: 10px;
  display: flex;
  align-items: center;
  background: #f7f7f7;
  z-index: 10;
  width: 89%;
}

.btn {
  background: #1AAD19;
  color: white;
  line-height: 1;
}

.weui-input {
  height: 100%;
  margin-left: 10px;
  width: 750px;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 40%;
  justify-content: center;
  text-align: center;
}

.table .eclipce {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: normal;
  width: 50%;
}
.tdLast {
  width: 30%;
}

.bg-w {
  background: snow;
}

.bg-g {
  background: #E6F3F9;
}

.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 3rem;
  align-items: center;
}

.clear {
  text-align: center;
}
  
.clear_btn {
  margin: 10px;
  color: #fff;
  background-color: #fd8f58;
  border-radius: 2px;
  width: 80%;
}
.scrollBox {
  padding-bottom: 30px;
}
.seat {
  height: 70px;
  width: 100%
}